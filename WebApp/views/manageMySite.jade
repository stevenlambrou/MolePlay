extends managerLayout

block scripts
  link(href='/stylesheets/style.css', rel='stylesheet')
  script(src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js")
  script(src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js")
  link(rel='stylesheet' href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css")

block content
  .row
    .col-lg-12
      h1.page-header Site Manager Dashboard
  .row
    .col-lg-3.col-md-6
      .panel.panel-yellow
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-calendar.fa-5x
            .col-xs-9.text-right
              div Schedule
        a(href='/sitemanager/manageSchedule')
          .panel-footer
            span.pull-left Manage Schedule
            span.pull-right
              i.fa.fa-cogs
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-primary
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-tasks.fa-5x
            .col-xs-9.text-right
              div Playlists
        a(href='/sitemanager/viewPlaylists')
          .panel-footer
            span.pull-left Preview Playlists
            span.pull-right
              i.fa.fa-film
            .clearfix
  .row
    .col-md-12
      .panel.panel-default(style="margin-top:15px;")
        .panel-heading
          H Most Used Molecules in Active Playlists
        .panel-body
         .graph-container
         .graph#hero-bar(style="height:250px;")

  script(type="text/javascript").
    new Morris.Bar({
    // ID of the element in which to draw the chart.
    element: 'hero-bar',
    // Chart data records -- each entry in this array corresponds to a point on
    // the chart.
    data: [
      { year: 'Glucose', value: 5 },
      { year: 'Aspirin', value: 3 },
      { year: 'Adderall', value: 2 },
      { year: 'Caffeine', value: 1 },
      { year: 'ATP', value: 1 }
    ],
    // The name of the data record attribute that contains x-values.
    xkey: 'year',
    // A list of names of data record attributes that contain y-values.
    ykeys: ['value'],
    // Labels for the ykeys -- will be displayed when you hover over the
    // chart.
    labels: ['Value']
    });
