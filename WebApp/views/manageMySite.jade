extends managerLayout

block scripts
  link(href='/stylesheets/style.css', rel='stylesheet')

block content
  .row
    .col-lg-12
      h1.page-header Dashboard
  .row
    .col-lg-3.col-md-6
      .panel.panel-yellow
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-tasks.fa-5x
            .col-xs-9.text-right
              div Schedule
        a(href='/sitemanager/manageSchedule')
          .panel-footer
            span.pull-left Manage Schedule
            span.pull-right
              i.fa.fa-cogs
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-primary
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-tasks.fa-5x
            .col-xs-9.text-right
              div Playlists
        a(href='/sitemanager/viewPlaylists')
          .panel-footer
            span.pull-left Preview Playlists
            span.pull-right
              i.fa.fa-film
            .clearfix
