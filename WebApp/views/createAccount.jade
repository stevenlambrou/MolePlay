extends layout

block content
  h1.page-header Create Account
  form.form-horizontal
    .form-group
      label.col-md-4.control-label Username
      .col-md-4
        input.form-control.required#username(type='text', placeholder='Username')
    .form-group
      label.col-md-4.control-label Email
      .col-md-4
        input.form-control.required#email(type='email', placeholder='Email')
    .form-group
      label.col-md-4.control-label First Name
      .col-md-4
        input.form-control.required#first-name(type='text', placeholder='First Name')
    .form-group
      label.col-md-4.control-label Last Name
      .col-md-4
        input.form-control.required#last-name(type='text', placeholder='Last Name')
    .form-group
      label.col-md-4.control-label Phone
      .col-md-4
        input.form-control#phone(type='text', placeholder='Phone Number')
    .form-group
      label.col-md-4.control-label Address
      .col-md-4
        input.form-control#address(type='text', placeholder='Address')
    .form-group
      label.col-md-4.control-label Password
      .col-md-4
        input.form-control.required#password(type='password', placeholder='Password')
    .form-group
      label.col-md-4.control-label Confirm Password
      .col-md-4
        input.form-control.required#password(type='password', placeholder='Confirm Password')
        button.btn.btn-default(type='submit' style="margin-top:15px;") Create Account
