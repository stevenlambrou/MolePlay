doctype html
html
  head
    script(src='http://code.jquery.com/jquery-1.9.1.js')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    link(href='./stylesheets/bootstrap/dist/css/bootstrap.css', rel='stylesheet')
    link(href='./stylesheets/style.css', rel='stylesheet')
    script(src="/stylesheets/bootstrap/js/transition.js")
    script(src="/stylesheets/bootstrap/js/collapse.js")
  body(style="margin-top:20px;")
    .container
      nav.navbar.navbar-default(role='navigation')
        .container-fluid
          .navbar-header
            button(type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false").navbar-toggle.collapsed
              span.sr-only Toggle Navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Molecular Playground
          .navbar-collapse.collapse#navbar-collapse-1
            ul.nav.navbar-nav
              li
                a(href='/playwithmolecules') Play With Molecules
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/createaccount') Create Account
              li
                a(href='/myaccount') My Account
              if loggedIn === true
                li
                  a(href='/login') Log Out
              else
                li
                  a(href='/login') Log In

      block content

      ol.breadcrumb
        li
          a(href='/') Home
        if title !== 'Index'
          li
            a(href=title) #{title}

      footer
        p ThreeTwenty 2015
          span.glyphicon.glyphicon-copyright-mark
        a(href='/devsitemap') Site Map (Dev)
